<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solutionTextView"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/resultTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/zero"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="391dp"
        android:layout_height="72dp"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:clickable="true"
        android:focusable="true"
        android:longClickable="true"
        android:textAlignment="textEnd"
        android:text="@string/zero"
        android:textColor="@color/white"
        android:textSize="64sp" />

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:paddingStart="10dp"
     android:paddingEnd="10dp"
     android:layout_alignParentBottom="true"
     android:id="@+id/buttons_layout">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="12sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/greenish_yellow"
             android:layout_margin="12dp"
             android:onClick="onPowerClick"
             android:id="@+id/numButton"
             android:text="@string/num"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/blue"
             android:layout_margin="12dp"
             android:onClick="onOperatorClick"
             android:id="@+id/multiplyButton"
             android:text="@string/mult"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/blue"
             android:layout_margin="12dp"
             android:onClick="onOperatorClick"
             android:id="@+id/divideButton"
             android:text="@string/div"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/blue"
             android:layout_margin="13dp"
             android:onClick="onOperatorClick"
             android:id="@+id/subtractButton"
             android:text="@string/sub"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num7Button"
             android:text="@string/seven"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num8Button"
             android:text="@string/eight"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num9Button"
             android:text="@string/nine"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/blue"
             android:layout_margin="13dp"
             android:onClick="onOperatorClick"
             android:id="@+id/addButton"
             android:text="@string/plus"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num4Button"
             android:text="@string/four"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num5Button"
             android:text="@string/five"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num6Button"
             android:text="@string/six"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/greenish_yellow"
             android:layout_margin="13dp"
             android:onClick="onEqualsClick"
             android:id="@+id/equalsButton"
             android:text="@string/equals"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num1Button"
             android:text="@string/one"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num2Button"
             android:text="@string/two"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num3Button"
             android:text="@string/three"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/maroon"
             android:layout_margin="13dp"
             android:onClick="onClearClick"
             android:id="@+id/clearButton"
             android:text="@string/clear"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="20sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/maroon"
             android:layout_margin="12dp"
             android:onClick="onDeleteClick"
             android:id="@+id/backspaceButton"
             android:text="@string/del"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:layout_margin="12dp"
             android:onClick="onNumberClick"
             android:id="@+id/num0Button"
             android:text="@string/zero"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="18sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/black"
             android:layout_margin="12dp"
             android:onClick="onDecimalClick"
             android:id="@+id/commaButton"
             android:text="@string/comma"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="14sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/maroon"
             android:onClick="onResetClick"
             android:layout_margin="13dp"
             android:id="@+id/delButton"
             android:text="@string/reset"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="12sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/purple_500"
             android:layout_margin="12dp"
             android:id="@+id/historyButton"
             android:text="@string/history"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="12sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/purple_500"
             android:layout_margin="12dp"
             android:onClick="onBinaryClick"
             android:id="@+id/binaryButton"
             android:text="@string/binary"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="12sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/purple_500"
             android:layout_margin="12dp"
             android:onClick="onHexadecimalClick"
             android:id="@+id/hexadecimalButton"
             android:text="@string/hexadecimal"
             />
         <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="50dp"
             app:cornerRadius="5dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="12sp"
             android:textColor="@color/white"
             android:backgroundTint="@color/purple_500"
             android:layout_margin="12dp"
             android:onClick="onOctalClick"
             android:id="@+id/octalButton"
             android:text="@string/octal"
             />
     </LinearLayout>

 </LinearLayout>

</RelativeLayout>